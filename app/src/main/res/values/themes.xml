<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Светлая тема -->
    <style name="Base.Theme.Basics" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/app_bar_background</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Общий стиль для всех TextInputLayout -->
        <item name="textInputStyle">@style/Widget.Basics.TextInputLayout.Outlined</item>
    </style>

    <style name="Theme.Basics" parent="Base.Theme.Basics" />

    <style name="Widget.Basics.TextInputLayout.Outlined"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <!-- Цвет рамки (берёт селектор из res/color/text_input_outline_colors.xml) -->
        <item name="boxStrokeColor">@color/text_input_outline_colors</item>

        <!-- Цвет лейбла / hint (селектор из res/color/text_input_hint_colors.xml) -->
        <item name="android:textColorHint">@color/text_input_hint_colors</item>
        <item name="hintTextColor">@color/text_input_hint_colors</item>

    </style>

</resources>
